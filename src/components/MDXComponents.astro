---
export interface Props {
  company?: string;
  companyUrl?: string;
  role?: string;
  period?: string;
  current?: boolean;
  logo?: string;
}

const { company, companyUrl, role, period, current, logo } = Astro.props;
---

<!-- Experience Card Component -->
{company && (
  <div class="glass-card mb-section">
    <div class="grid grid-cols-[4rem_1fr] gap-6">
      <!-- Logo Column -->
      <div class="w-16 h-16 flex items-center justify-center flex-shrink-0">
        {logo && (
          <img src={logo} alt={company} class="w-full h-full object-contain rounded-xl" />
        )}
      </div>
      
      <!-- Content Column -->
      <div>
        <div class="flex items-start justify-between mb-4">
          <div>
            <h3 class="flex gap-2 text-sm text-black dark:text-white mb-1 items-center">
              <span class="shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-server icons-base">
                  <rect width="20" height="8" x="2" y="2" rx="2" ry="2"></rect>
                  <rect width="20" height="8" x="2" y="14" rx="2" ry="2"></rect>
                  <line x1="6" x2="6.01" y1="6" y2="6"></line>
                  <line x1="6" x2="6.01" y1="18" y2="18"></line>
                </svg>
              </span>
              <span class="text-cv-muted font-normal">Company:</span> 
              {companyUrl ? (
                <a href={companyUrl} target="_blank" class="hover:underline">{company}</a>
              ) : (
                company
              )}
            </h3>
            <p class="text-role text-cv-muted">{role}</p>
          </div>
          <p class={`text-date ${current ? 'text-cv-accent' : 'text-cv-muted'}`}>
            {period}
          </p>
        </div>
        
        <ul class="space-y-2">
          <slot />
        </ul>
      </div>
    </div>
  </div>
)}