---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="footer-column">
  <h3 class="text-sm font-semibold text-cv-content mb-3 uppercase tracking-wider">{title}</h3>
  <div class="text-xs text-cv-muted leading-relaxed space-y-2">
    <slot />
  </div>
</div>

<style>
  .footer-column :global(a) {
    @apply text-cv-muted hover:text-cv-accent transition-colors duration-200;
  }
  
  .footer-column :global(ul) {
    @apply space-y-2;
  }
  
  .footer-column :global(ul li::before) {
    content: none;
  }
</style>