---
export interface Props {
  company: string;
  companyUrl?: string;
  role: string;
  period: string;
  current?: boolean;
  logo?: string;
}

const { company, companyUrl, role, period, current = false, logo } = Astro.props;
---

<div class="glass-card mb-section">
  <div class="grid grid-cols-[4rem_1fr] gap-6">
    <!-- Logo Column -->
    <div class="w-16 h-16 flex items-center justify-center flex-shrink-0">
      {logo && (
        <img src={logo} alt={company} class="w-full h-full object-contain rounded-xl" />
      )}
    </div>
    
    <!-- Content Column -->
    <div>
      <div class="flex items-start justify-between mb-4">
        <div>
          <h3 class="text-company text-cv-content font-semibold">
            <span class="text-cv-muted font-normal">Company:</span>{' '}
            {companyUrl ? (
              <a href={companyUrl} target="_blank" rel="noopener noreferrer" class="hover:underline">
                {company}
              </a>
            ) : (
              company
            )}
          </h3>
          <p class="text-role text-cv-muted">{role}</p>
        </div>
        <span class="inline-flex items-center gap-1.5 px-3 py-1 text-sm bg-blue-500 text-white rounded-sm border border-blue-600 shadow-sm hover:bg-blue-600 transition-colors mb-2">
          <iconify-icon icon="carbon:download" width="16" height="16"></iconify-icon>
          {period}
        </span>
      </div>
      
      <ul class="space-y-2">
        <slot />
      </ul>
    </div>
  </div>
</div>