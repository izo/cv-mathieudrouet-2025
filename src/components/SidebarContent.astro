---
// Ce composant contient le contenu de la sidebar pour éviter la duplication
import { siteConfig } from '../config/site';
---

<div class="sidebar-content">
  <div class="p-4 sm:p-6 lg:p-8 text-center border-b border-cv-border">
    <div class="w-20 h-20 sm:w-24 sm:h-24 lg:w-32 lg:h-32 mx-auto mb-3 sm:mb-4 overflow-hidden">
      <img
        src={siteConfig.author.image}
        alt={`${siteConfig.author.name} - ${siteConfig.author.jobTitle}`}
        class="w-full h-full object-cover"
        loading="eager"
        decoding="async"
        fetchpriority="high"
        width="128"
        height="128"
      />
    </div>
    <h2 class="text-2xl sm:text-3xl lg:text-hero text-cv-accent font-black font-lora mb-2 mt-0" id="profile-name">{siteConfig.author.name}</h2>
    <p class="text-sm sm:text-base lg:text-body text-cv-muted font-normal mt-0 mb-0">{siteConfig.author.jobTitle}</p>
  </div>
  
  <div class="p-4 sm:p-6 lg:p-8 border-b border-cv-border">
    <h2 class="text-lg sm:text-xl lg:text-section text-cv-content font-semibold font-lora mb-3 sm:mb-4 border-b border-cv-border pb-2" id="contact-info">Contact</h2>
    <ul class="space-y-3 sm:space-y-4 list-none p-0">
      <li>
        <a href={`tel:${siteConfig.author.phone}`} class="text-sm sm:text-base lg:text-body text-cv-content font-bold hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded" aria-label={`Appeler au ${siteConfig.author.phone}`}>{siteConfig.author.phone}</a>
      </li>
      <li>
        <a href={`mailto:${siteConfig.author.email}`} class="text-sm sm:text-base lg:text-body text-cv-content font-bold hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded" aria-label={`Envoyer un email à ${siteConfig.author.email}`}>{siteConfig.author.email}</a>
      </li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">
        {siteConfig.author.location}
      </li>
      <li>
        <a href={siteConfig.social.linkedin.url} target="_blank" rel="noopener noreferrer" class="text-sm sm:text-base lg:text-body text-cv-content font-bold hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-focus focus:rounded" aria-label="Profil LinkedIn (ouvre dans un nouvel onglet)">
          LinkedIn
          <span class="sr-only"> (lien externe)</span>
          <iconify-icon icon="carbon:launch" width="12" height="12" class="ml-1 inline" aria-hidden="true"></iconify-icon>
        </a>
      </li>
      <li>
        <a href={siteConfig.social.github.url} target="_blank" rel="noopener noreferrer" class="text-sm sm:text-base lg:text-body text-cv-content font-bold hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-focus focus:rounded" aria-label="Profil GitHub (ouvre dans un nouvel onglet)">
          GitHub
          <span class="sr-only"> (lien externe)</span>
          <iconify-icon icon="carbon:launch" width="12" height="12" class="ml-1 inline" aria-hidden="true"></iconify-icon>
        </a>
      </li>
      <li>
        <a href={siteConfig.social.portfolio.url} target="_blank" rel="noopener noreferrer" class="text-sm sm:text-base lg:text-body text-cv-content font-bold hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-focus focus:rounded" aria-label="Portfolio photographique (ouvre dans un nouvel onglet)">
          {siteConfig.social.portfolio.text}
          <span class="sr-only"> (lien externe)</span>
          <iconify-icon icon="carbon:launch" width="12" height="12" class="ml-1 inline" aria-hidden="true"></iconify-icon>
        </a>
      </li>
    </ul>
  </div>
  
  <div class="p-4 sm:p-6 lg:p-8 border-b border-cv-border">
    <h2 class="text-lg sm:text-xl lg:text-section text-cv-content font-semibold font-lora mb-3 sm:mb-4 border-b border-cv-border pb-2">Langues</h2>
    <ul class="space-y-2 sm:space-y-2.5 list-none p-0">
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Français - Natif</li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Anglais - Professionnel</li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Espagnol - Intermédiaire</li>
    </ul>
  </div>
  
  <div class="p-4 sm:p-6 lg:p-8">
    <h2 class="text-lg sm:text-xl lg:text-section text-cv-content font-semibold font-lora mb-3 sm:mb-4 border-b border-cv-border pb-2">Intérêts</h2>
    <ul class="space-y-2 sm:space-y-2.5 list-none p-0">
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Musique</li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Photographie</li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Permaculture</li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Art numérique</li>
      <li class="text-sm sm:text-base lg:text-body text-cv-muted">Archéologie</li>
    </ul>
  </div>
</div>