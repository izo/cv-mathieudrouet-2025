---
import CVLayout from '../layouts/CVLayout.astro';
import MobileSidebar from '../components/MobileSidebar.astro';
import SidebarContent from '../components/SidebarContent.astro';
import { Content as CV } from '../content/cv.mdx';

const title = "Mathieu Drouet - Senior Product Manager";
const description = "CV de Mathieu Drouet, Senior Product Manager avec plus de 10 ans d'expérience en gestion de produits numériques et transformation digitale.";
---

<CVLayout title={title} description={description}>
  <div class="main-wrapper">
    <div class="prose prose-lg max-w-none">
      <CV />
    </div>
  </div>
  
  <aside class="sidebar-wrapper hidden lg:block">
    <SidebarContent />
  </aside>

  <MobileSidebar>
    <SidebarContent />
  </MobileSidebar>
</CVLayout>