---
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  showFooter?: boolean;
}

const { title, description, showFooter = true } = Astro.props;
---

<!doctype html>
<html lang="fr" class="h-full" data-theme="zed">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Font Awesome removed - using Iconify instead -->
    <!-- Google Fonts removed - using system fonts instead -->
    
    <!-- Iconify API -->
    <script src="https://code.iconify.design/3/3.1.1/iconify.min.js"></script>
    
    <!-- Using system fonts for performance -->
    <title>{title}</title>
  </head>
  <body class="min-h-full font-sans text-cv-content antialiased">
    <!-- Main content container -->
    <div class="zed-container">
      <!-- Glass theme wrapper (for liquid-glass theme) -->
      <div class="glass-wrapper">
        <div class="absolute inset-0 rounded-[2rem] overflow-hidden">
          <div class="absolute inset-0 bg-cv-glass backdrop-blur-ultra"></div>
          <div class="absolute inset-0 bg-glass-gradient"></div>
          <div class="absolute inset-0 bg-glass-radial opacity-50"></div>
          <div class="absolute inset-0 bg-light-leak opacity-30"></div>
          <div class="absolute inset-0 shadow-glass-border rounded-[2rem]"></div>
        </div>
        <div class="absolute inset-0 rounded-[2rem] shadow-glass-lg"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10">
        <!-- Main content slot -->
        <slot name="content">
          <slot />
        </slot>
        
        <!-- Footer (conditional) -->
        {showFooter && (
          <footer class="border border-cv-border/20 mt-16 rounded-lg">
            <div class="pl-page pr-8 py-8 sm:py-10 lg:py-12 lg:flex lg:items-center lg:justify-between">
              <div class="flex justify-center gap-x-4 sm:gap-x-6 lg:order-2">
                <a href="https://linkedin.com/in/mathieu-drouet" class="text-cv-muted hover:text-cv-content transition-colors">
                  <span class="sr-only">LinkedIn</span>
                  <iconify-icon icon="carbon:logo-linkedin" width="24" height="24"></iconify-icon>
                </a>
                <a href="https://github.com/mathieu-drouet" class="text-cv-muted hover:text-cv-content transition-colors">
                  <span class="sr-only">GitHub</span>
                  <iconify-icon icon="carbon:logo-github" width="24" height="24"></iconify-icon>
                </a>
                <a href="mailto:hello@mathieu-drouet.com" class="text-cv-muted hover:text-cv-content transition-colors">
                  <span class="sr-only">Email</span>
                  <iconify-icon icon="carbon:email" width="24" height="24"></iconify-icon>
                </a>
              </div>
              <p class="mt-6 sm:mt-8 lg:mt-0 text-center text-xs sm:text-sm/6 text-cv-muted lg:order-1">&copy; 2025 Mathieu Drouet. Tous droits réservés.</p>
            </div>
          </footer>
        )}
      </div>
    </div>
    
    <!-- Optional external footer slot -->
    <slot name="footer" />
  </body>
</html>