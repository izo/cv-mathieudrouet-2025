---
import '../styles/global.css';
import { siteConfig } from '../config/site.ts';

export interface Props {
  title: string;
  description: string;
  showFooter?: boolean;
  image?: string;
  url?: string;
}

const { title, description, showFooter = true, image = siteConfig.author.image, url } = Astro.props;
const canonicalUrl = url || Astro.url.href;
const fullImageUrl = new URL(image, siteConfig.url).href;
---

<!doctype html>
<html lang="fr" class="h-full" data-theme="lumon" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- SEO Meta Tags -->
    <meta name="author" content={siteConfig.author.name} />
    <meta name="keywords" content={siteConfig.seo.keywords.join(", ")} />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="profile" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:locale" content={siteConfig.seo.locale} />
    <meta property="profile:first_name" content="Mathieu" />
    <meta property="profile:last_name" content="Drouet" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    
    <!-- Additional Meta -->
    <meta name="theme-color" content={siteConfig.seo.themeColor} />
    <meta name="msapplication-TileColor" content={siteConfig.seo.themeColor} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600;700&family=Lora:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Performance optimizations -->
    <link rel="preload" href="/profile.jpg" as="image" type="image/jpeg">
    
    <title>{title}</title>
  </head>
  <body class="min-h-full font-sans text-cv-content antialiased" itemscope itemtype="https://schema.org/ProfilePage">
    <!-- Skip Links for Accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-cv-accent focus:text-white focus:rounded focus:no-underline focus:shadow-lg">Aller au contenu principal</a>
    <a href="#navigation" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-32 focus:z-50 focus:px-4 focus:py-2 focus:bg-cv-accent focus:text-white focus:rounded focus:no-underline focus:shadow-lg">Aller Ã  la navigation</a>
    
    <!-- Main content container -->
    <div class="lumon-container">
      <!-- Glass theme wrapper (for liquid-glass theme) -->
      <div class="glass-wrapper">
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute inset-0 bg-cv-glass backdrop-blur-ultra"></div>
          <div class="absolute inset-0 bg-glass-gradient"></div>
          <div class="absolute inset-0 bg-glass-radial opacity-50"></div>
          <div class="absolute inset-0 bg-light-leak opacity-30"></div>
          <div class="absolute inset-0 shadow-glass-border"></div>
        </div>
        <div class="absolute inset-0 shadow-glass-lg"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10">
        <!-- Main content slot -->
        <main id="main-content" role="main" class="focus:outline-none" tabindex="-1">
          <slot name="content">
            <slot />
          </slot>
        </main>
        
        <!-- Footer (conditional) -->
        {showFooter && (
          <div class="pl-4 pr-4 sm:pl-6 sm:pr-6 lg:pl-page lg:pr-8">
            <footer class="glass-card mt-4 sm:mt-6" role="contentinfo">
              <div class="flex flex-col sm:flex-row items-center justify-between gap-3">
                <p class="text-xs text-cv-muted order-2 sm:order-1 font-ibm-plex-mono">&copy; 2025 {siteConfig.author.name}</p>
                <div class="flex items-center gap-3 order-1 sm:order-2">
                  <a href={siteConfig.social.linkedin.url} target="_blank" rel="noopener noreferrer" class="text-cv-muted hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded p-1" aria-label="LinkedIn (ouvre dans un nouvel onglet)">
                    <span class="inline-block w-4 h-4">ðŸ’¼</span>
                  </a>
                  <a href={siteConfig.social.github.url} target="_blank" rel="noopener noreferrer" class="text-cv-muted hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded p-1" aria-label="GitHub (ouvre dans un nouvel onglet)">
                    <span class="inline-block w-4 h-4">ðŸ”—</span>
                  </a>
                  <a href={`mailto:${siteConfig.author.email}`} class="text-cv-muted hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded p-1" aria-label="Envoyer un email">
                    <span class="inline-block w-4 h-4">ðŸ“§</span>
                  </a>
                </div>
              </div>
            </footer>
          </div>
        )}
      </div>
    </div>
    
  </body>
</html>