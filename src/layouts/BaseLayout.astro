---
import '../styles/global.css';
import { siteConfig } from '../config/site.ts';
import { env, securityConfig, isDevelopment } from '../config/env.ts';

export interface Props {
  title: string;
  description: string;
  showFooter?: boolean;
  image?: string;
  url?: string;
  enableDebugMode?: boolean;
}

const { 
  title, 
  description, 
  showFooter = true, 
  image = siteConfig.author.image, 
  url,
  enableDebugMode = isDevelopment()
} = Astro.props;

const canonicalUrl = url || Astro.url.href;
const fullImageUrl = new URL(image, siteConfig.url).href;
---

<!doctype html>
<html lang="fr" class="h-full" data-theme="lumon" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- SEO Meta Tags -->
    <meta name="author" content={siteConfig.author.name} />
    <meta name="keywords" content={siteConfig.seo.keywords.join(", ")} />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="profile" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:locale" content={siteConfig.seo.locale} />
    <meta property="profile:first_name" content="Mathieu" />
    <meta property="profile:last_name" content="Drouet" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    
    <!-- Additional Meta -->
    <meta name="theme-color" content={siteConfig.seo.themeColor} />
    <meta name="msapplication-TileColor" content={siteConfig.seo.themeColor} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600;700&family=Lora:wght@400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600;700&family=Lora:wght@400;500;600;700&display=swap" rel="stylesheet"></noscript>
    
    <!-- Performance optimizations -->
    <link rel="preload" href={siteConfig.author.image} as="image" type="image/jpeg" fetchpriority="high">
    
    <!-- Iconify Icons -->
    <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>
    
    <!-- Tally Forms -->
    <script async src="https://tally.so/widgets/embed.js"></script>
    
    <!-- Security Headers -->
    {securityConfig.enableCSP && (
      <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' https://code.iconify.design https://tally.so; script-src-elem 'self' 'unsafe-inline' https://code.iconify.design https://tally.so; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https://tally.so; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://api.iconify.design https://api.simplesvg.com https://api.unisvg.com https://tally.so https://api.tally.so; object-src 'none'; base-uri 'self'; form-action 'self' https://tally.so; frame-src https://tally.so;" />
    )}
    
    <title>{title}</title>
  </head>
  <body class="min-h-full font-sans text-cv-content antialiased" itemscope itemtype="https://schema.org/ProfilePage">
    <!-- Skip Links for Accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-cv-accent focus:text-white focus:rounded focus:no-underline focus:shadow-lg">Aller au contenu principal</a>
    <a href="#navigation" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-32 focus:z-50 focus:px-4 focus:py-2 focus:bg-cv-accent focus:text-white focus:rounded focus:no-underline focus:shadow-lg">Aller Ã  la navigation</a>
    
    <!-- Main content container -->
    <div class="lumon-container">
      <!-- Content -->
      <div class="relative z-10">
        <!-- Main content slot -->
        <main id="main-content" role="main" class="focus:outline-none" tabindex="-1">
          <slot name="content">
            <slot />
          </slot>
        </main>
        
        <!-- Footer (conditional) -->
        {showFooter && (
          <div class="pl-4 pr-4 sm:pl-6 sm:pr-6 lg:pl-page lg:pr-8">
            <footer class="glass-card mt-4 sm:mt-6" role="contentinfo">
              <div class="flex flex-col sm:flex-row items-center justify-between gap-3">
                <p class="text-xs text-cv-muted order-2 sm:order-1 font-ibm-plex-mono">&copy; 2025 {siteConfig.author.name}</p>
                <div class="flex items-center gap-3 order-1 sm:order-2">
                  <a href={siteConfig.social.linkedin.url} target="_blank" rel="noopener noreferrer" class="text-cv-muted hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded p-1" aria-label="LinkedIn (ouvre dans un nouvel onglet)">
                    <iconify-icon icon="carbon:logo-linkedin" width="16" height="16" class="inline-block"></iconify-icon>
                  </a>
                  <a href={siteConfig.social.github.url} target="_blank" rel="noopener noreferrer" class="text-cv-muted hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded p-1" aria-label="GitHub (ouvre dans un nouvel onglet)">
                    <iconify-icon icon="carbon:logo-github" width="16" height="16" class="inline-block"></iconify-icon>
                  </a>
                  <button onclick="Tally.openPopup('3EZMjX', {layout: 'modal', width: 600, alignLeft: false, hideTitle: false, overlay: true, emoji: {text: 'ðŸ‘‹', animation: 'wave'}})" class="text-cv-muted hover:text-cv-accent transition-colors focus:outline-none focus:ring-2 focus:ring-cv-accent focus:rounded p-1" aria-label="Ouvrir le formulaire de contact">
                    <iconify-icon icon="carbon:email" width="16" height="16" class="inline-block"></iconify-icon>
                  </button>
                </div>
              </div>
            </footer>
          </div>
        )}
      </div>
    </div>
    
    <!-- Debug mode activation -->
    <script is:inline define:vars={{ enableDebugMode }}>
      if (enableDebugMode) {
        console.log('ðŸ”§ CV Debug Mode Active');
        console.log('Environment:', 'development');
        console.log('Available debug tools: __cvDebug');
        if (typeof window !== 'undefined' && window.__cvDebug) {
          window.__cvDebug.help();
        }
      }
    </script>
  </body>
</html>